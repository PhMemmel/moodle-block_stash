{{!
    Swap form.
}}

<div>
    <form data-courseid="{{courseid}}" data-userid="{{userid}}" data-myuserid="{{myuserid}}">
        <div>This guys haul</div>
        <select id="your-items">
            {{#yourstash.useritems}}
                <option value="{{useritem.id}}" data-itemid="{{item.id}}" data-amount="{{useritem.quantity}}" data-imgurl="{{item.imageurl}}">{{item.name}}</option>
            {{/yourstash.useritems}}
        </select>
        <button class="btn btn-secondary" data-add-item="your-items">Add</button>
        <table class="table table-hover" data-type="your-items" data-status="empty">
            <tr>
                <td>No items selected</td>
            </tr>
        </table>
        <div>My collection</div>
        <select id="my-items">
            {{#mystash.useritems}}
                <option value="{{useritem.id}}" data-itemid="{{item.id}}" data-amount="{{useritem.quantity}}" data-imgurl="{{item.imageurl}}">{{item.name}}</option>
            {{/mystash.useritems}}
        </select>
        <button class="btn btn-secondary" data-add-item="my-items">Add</button>
        <table class="table table-hover" data-type="my-items" data-status="empty">
            <tr>
                <td>No items selected</td>
            </tr>
        </table>
    </form>
</div>
{{#js}}
require([
    'block_stash/add-item'
], function(AddItem) {
    AddItem.init();
});
{{/js}}
